[Unit]
Description=Date Sync Service
Wants=network-online.target
After=network.target

[Service]
Type=simple
WorkingDirectory=/etc/systemd
ExecStart=/bin/sh -c 'while true;do T="$(docker run -ti --rm -v ${HOME}:/root -v $(pwd):/wget arpit6232/wget_arm64 -qS --max-redirect 0 http://bing.com/ 2>&1|grep -oiP '"'Date: \\K.+'"')";echo "[$T]";[ -n "$T" ] && date --set="$T" && break;sleep 1;done'

[Install]
WantedBy=multi-user.target
